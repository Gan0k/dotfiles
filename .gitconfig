[user]
	name = Guido Arnau
	email = guido.arnau@gmail.com

[core]
	editor = vim
	whitespace=-indent-with-non-tab,tab-in-indent,trailing-space,tabwidth=4

[color]
	ui = true

[filter "tabspace"]
	smudge = unexpand --tabs=4 --first-only
	clean = expand --tabs=4 --initial

[color "diff"]
	whitespace = red reverse

[diff]
	tool = vimdiff

[push]
	default = current
