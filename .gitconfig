[user]
    name = Guido Arnau
    email = guido.arnau@gmail.com

[core]
    editor = nvim
    whitespace=-indent-with-non-tab,trailing-space,tabwidth=4

[color]
    ui = true

[filter "tabspace"]
    smudge = unexpand --tabs=4 --first-only
    clean = expand --tabs=4 --initial

[color "diff"]
    whitespace = red reverse

[diff]
    tool = nvim -d
    indentHeuristic = true

[commit]
    verbose = true

[push]
    default = current
